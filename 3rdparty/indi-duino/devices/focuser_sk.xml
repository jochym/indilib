<INDIDriver>

<defSwitchVector device="Arduino Focuser" name="CONNECTION" label="Connection" group="Main Control" state="Idle" perm="rw" rule="OneOfMany" timeout="60">
    <defSwitch name="CONNECT" label="Connect">
Off
    </defSwitch>
    <defSwitch name="DISCONNECT" label="Disconnect">
On
    </defSwitch>
</defSwitchVector>

<defTextVector device="Arduino Focuser" name="DEVICE_PORT" label="SERIAL" group="Main Control" state="Idle" perm="rw" timeout="0">
    <defText name="PORT" label="Port">
/dev/ttyACM0
    </defText>
</defTextVector>

<defNumberVector device="Arduino Focuser" name="CONFIG" label="CONFIG" group="Config" state="Idle" perm="rw" timeout="0">
<defNumber name="AOUTPUT_03" label="SPEED" format="%4.0f" min="0" max="4000" step="1">
4000
</defNumber>
<defNumber name="AOUTPUT_06" label="ACCEL" format="%4.0f" min="0" max="1000" step="1">
400
</defNumber>
</defNumberVector>

<defNumberVector device="Arduino Focuser" name="STEPS" label="STEPS PER PUSH" group="Config" state="Idle" perm="rw" timeout="0">
<defNumber name="AOUTPUT_10" label="STEPS" format="%4.0f" min="0" max="1000" step="1">
40
</defNumber>
</defNumberVector>

<defNumberVector device="Arduino Focuser" name="BACKSLASH" label="BACKSLASH" group="Config" state="Idle" perm="rw" timeout="0">
<defNumber name="AOUTPUT_11" label="STEPS" format="%4.0f" min="0" max="1000" step="1">
40
</defNumber>
</defNumberVector>

<defNumberVector device="Arduino Focuser" name="POSITION_TARGET" label="POSITION" group="Main Control" state="Idle"  timeout="0" perm="rw">
<defNumber name="AOUTPUT_05" label="TARGET" format="%4.0f" min="0" max="16000" step="1">
8000
</defNumber>
</defNumberVector>
<defNumberVector device="Arduino Focuser" name="POSITION_ACTUAL" label="POSITION" group="Main Control" state="Idle"  timeout="0" perm="ro">
<defNumber name="AINPUT__14" label="ACTUAL" format="%4.0f" min="0" max="16000" step="1" >
8000
</defNumber>
</defNumberVector>

</INDIDriver>
