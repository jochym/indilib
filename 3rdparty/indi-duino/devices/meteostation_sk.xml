<INDIDriver>

<defSwitchVector device="Arduino MeteoStation" name="CONNECTION" label="Connection" group="Main Control" state="Idle" perm="rw" rule="OneOfMany" timeout="60">
    <defSwitch name="CONNECT" label="Connect">
Off
    </defSwitch>
    <defSwitch name="DISCONNECT" label="Disconnect">
On
    </defSwitch>
</defSwitchVector>

<defTextVector device="Arduino MeteoStation" name="DEVICE_PORT" label="SERIAL" group="Main Control" state="Idle" perm="rw" timeout="0">
    <defText name="PORT" label="Port">
/dev/ttyUSB0
    </defText>
</defTextVector>

<defSwitchVector device="Arduino MeteoStation" name="BACK_LIGHT" label="BACK_LIGHT" group="Main Control" state="Idle" perm="rw" rule="OneOfMany" timeout="1">
    <defSwitch name="ON" label="OPEN">
Off
    <indiduino pin="13"/>
    </defSwitch>
    <defSwitch name="OFF" label="CLOSE">
On
    </defSwitch>
</defSwitchVector>


<defNumberVector device="Arduino MeteoStation" name="IR" label="IR Sensor" group="Main Control" state="Idle" perm="ro" timeout="0">
    <defNumber name="IR" label="IR" format="%4.1f" min="0" max="10240" step="1">
    <indiduino pin="14" type="input" mul="0.1" add="0"/>
0
    </defNumber>
    <defNumber name="T" label="Celsius" format="%4.1f" min="0" max="10240" step="1">
    <indiduino pin="15" type="input" mul="0.1" add="0"/>
0
    </defNumber>
</defNumberVector>
<defNumberVector device="Arduino MeteoStation" name="Presure" label="Presure Sensor" group="Main Control" state="Idle" perm="ro" timeout="0">

    <defNumber name="P" label="mBars" format="%4.0f" min="0" max="10240" step="1">
    <indiduino pin="16" type="input" mul="1" add="0"/>
0
    </defNumber>
    <defNumber name="T" label="Celsius" format="%4.1f" min="0" max="10240" step="1">
    <indiduino pin="17" type="input" mul="0.1" add="0"/>
0
    </defNumber>
</defNumberVector>
<defNumberVector device="Arduino MeteoStation" name="HR" label="HR Sensor" group="Main Control" state="Idle" perm="ro" timeout="0">
    <defNumber name="HR" label="HR" format="%4.1f" min="0" max="10240" step="1">
    <indiduino pin="18" type="input" mul="0.1" add="0"/>
0
    </defNumber>
    <defNumber name="T" label="Celsius" format="%4.1f" min="0" max="10240" step="1">
    <indiduino pin="19" type="input" mul="0.1" add="0"/>
0
    </defNumber>
    <defNumber name="DEW" label="DEW.POINT" format="%4.1f" min="0" max="10240" step="1">
    <indiduino pin="20" type="input" mul="0.1" add="0"/>
0
    </defNumber>
</defNumberVector>
<defLightVector device="Arduino INPUTS" name="STATUS" label="STATUS" group="INFO" state="Idle" perm="ro" rule="AnyOfMany" timeout="1">
    <defLight name="clouds" label="Cloudy">
	<indiduino pin="3"/>
	Off
    </defLight>
    <defLight name="dew" label="Dewing">
	<indiduino pin="4"/>
	Off
    </defLight>
    <defLight name="daylight" label="Daylight">
	<indiduino pin="5"/>
	Off
    </defLight>
</defLightVector>

<defLightVector device="Arduino INPUTS" name="FAIL" label="Sensor FAIL" group="INFO" state="Idle" perm="ro" rule="AnyOfMany" timeout="1">
    <defLight name="IR" label="IR Fail">
	<indiduino pin="6"/>
	Off
    </defLight>
    <defLight name="HR" label="HR Fail">
	<indiduino pin="7"/>
	Off
    </defLight>
    <defLight name="HR" label="P Fail">
	<indiduino pin="8"/>
	Off
    </defLight>
</defLightVector>


</INDIDriver>
