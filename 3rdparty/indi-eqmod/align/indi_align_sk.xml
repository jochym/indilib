<INDIDriver>
<defTextVector device="EQMod Mount" name="ALIGNDATAFILE" label="Data File" group="Alignment" state="Idle" perm="rw">
<defText name="ALIGNDATAFILENAME" label="Name">~/.indi/AlignData.xml</defText> 
</defTextVector>
<defNumberVector device="EQMod Mount" name="ALIGNTELESCOPECOORDS" label="Telescope Coords" group="Alignment" state="Idle" perm="ro">
<defNumber name="ALIGNTELESCOPE_RA" label="Telescope RA (hh:mm:ss)" format="%010.6m" min="0.0" max="24.0" step="0.0">
0.0
</defNumber>
<defNumber name="ALIGNTELESCOPE_DE" label="Telescope DE (dd:mm:ss)" format="%010.6m" min="-90.0" max="90.0" step="0.0">
0.0
</defNumber>
</defNumberVector>
<defBLOBVector device="EQMod Mount" name="ALIGNDATA" label="Align Data" group="Alignment" state="Idle" perm="rw">
<defBLOB name="POINTLIST" label="Points List"/>
</defBLOBVector>
<defSwitchVector device="EQMod Mount" name="ALIGNMODE" label="Alignment Mode" group="Alignment" state="Idle" perm="rw" rule="OneOfMany">
<defSwitch name="NOALIGN" label="No Alignment">
Off
</defSwitch>
<defSwitch name="ALIGNSYNC" label="Normal Syncs">
On
</defSwitch>
<defSwitch name="ALIGNNEAREST" label="Nearest Point">
Off
</defSwitch>
<defSwitch name="ALIGNNSTAR" label="N-Star">
Off
</defSwitch>
</defSwitchVector>

<defSwitchVector device="EQMod Mount" name="ALIGNLIST" label="Manage List" group="Alignment" state="Idle" perm="rw" rule="OneOfMany">
<defSwitch name="ALIGNLISTADD" label="Add point">
Off
</defSwitch>
<defSwitch name="ALIGNLISTCLEAR" label="Clear List">
Off
</defSwitch>
</defSwitchVector>
<defNumberVector device="EQMod Mount" name="ALIGNPOINT" label="Alignment Point" group="Alignment" state="Idle" perm="rw">
<defNumber name="ALIGNPOINT_JD" label="Sync Date" format="%08.8f" min="0.0" max="9999999999" step="0.0">
0.0
</defNumber>
<defNumber name="ALIGNPOINT_SYNCTIME" label="Sync LST" format="%010.6m" min="0.0" max="24.0" step="0.000000000001">
0.0
</defNumber>
<defNumber name="ALIGNPOINT_CELESTIAL_RA" label="Celestial RA (hh:mm:ss)" format="%010.6m" min="0.0" max="24.0" step="0.0">
0.0
</defNumber>
<defNumber name="ALIGNPOINT_CELESTIAL_DE" label="Celestial DE (dd:mm:ss)" format="%010.6m" min="-90.0" max="90.0" step="0.0">
0.0
</defNumber>
<defNumber name="ALIGNPOINT_TELESCOPE_RA" label="Telescope RA (hh:mm:ss)" format="%010.6m" min="0.0" max="24.0" step="0.0">
0.0
</defNumber>
<defNumber name="ALIGNPOINT_TELESCOPE_DE" label="Telescope DE (dd:mm:ss)" format="%010.6m" min="-90.0" max="90.0" step="0.0">
0.0
</defNumber>
</defNumberVector>

<defSwitchVector device="EQMod Mount" name="ALIGNOPTIONS" label="Options" group="Alignment" state="Idle" perm="rw" rule="OneOfMany">
<defSwitch name="ADDONSYNC" label="Add point on Sync">
On
</defSwitch>
<defSwitch name="ALIGNONGOTO" label="Align on goto">
On
</defSwitch>
</defSwitchVector>
</INDIDriver>