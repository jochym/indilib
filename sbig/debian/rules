#!/usr/bin/make -f
clean::
	dh_testdir
	dh_clean
	rm -rf debian/tmp 

d:=debian/sbig
version:=2.0.0
DEB_HOST_ARCH   ?= $(shell dpkg-architecture -qDEB_HOST_ARCH)

install: 
	mkdir -p $(d)
	python sbig_install_drivers.py $(d) $(DEB_HOST_ARCH) $(version)

binary-indep: install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch:
	# nothing to do

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
