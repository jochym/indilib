#!/usr/bin/make -f
clean::
	dh_testdir
	dh_clean
	rm -rf debian/tmp 

d:=debian/tmp
version:=2.0.0
DEB_HOST_ARCH   ?= $(shell dpkg-architecture -qDEB_HOST_ARCH)

install: 
	mkdir -p $(d)
	cmake -DCMAKE_INSTALL_PREFIX=/usr  .
	make DESTDIR=$(d) install

binary-indep: install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_install -s --sourcedir=debian/tmp
	dh_link -s
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_installdeb -s
	dh_gencontrol -s
	dh_md5sums -s
	dh_builddeb -s

binary-arch:
	# nothing to do

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
